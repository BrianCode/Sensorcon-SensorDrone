<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.openintents.sensorsimulator"
      android:versionCode="2"
      android:versionName="1.1.1">
	<!-- History: 
	[2] 1.1.1: 2011-06-03
	[1] 1.1.0-rc1: 2011-01-05
	-->

    <uses-permission android:name="android.permission.INTERNET"/>
	 
	<application android:icon="@drawable/mobile_shake_application001a" android:label="@string/sensorsimulatorsettings">
        
		<!-- Providers -->
		<provider android:name=".dbprovider.SensorSimulatorProvider"
			android:authorities="org.openintents.sensorsimulator" />

		<!-- SensorSimulator -->
		<activity android:name=".SensorSimulatorSettingsActivity"
			android:label="@string/sensorsimulatorsettings"
			android:icon="@drawable/mobile_shake_application001a">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="org.openintents.category.SETTINGS" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.openintents.sensorsimulator.setting"/>
			</intent-filter>
		</activity>
		
</application>	 
		
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>



</manifest> 